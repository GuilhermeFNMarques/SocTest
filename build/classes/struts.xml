    <package name="Test" extends="struts-default">

        <action name="index">
            <result>/index.jsp</result>
        </action>

        <action name="viewListar" class="view.ExamesView">
            <result name="lista">/listar.jsp</result>

        </action>
        
        <action name="viewAdicionar" class="view.AdicionarView">
            <result name="adiciona">/adicionar.jsp</result>

        </action>
        
        <action name="viewExcluir" class="view.ExcluirView">
            <result name="exclui">/excluir.jsp</result>

        </action>
        
        <action name="viewAlterar" class="view.AlterarView">
